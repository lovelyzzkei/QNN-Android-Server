<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <!-- Toolbar -->

    <!-- Content Layout -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/topAppBar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:titleTextColor="@color/primaryTextColor">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:textStyle="italic|bold"
            android:text="@string/title">

        </TextView>
    </com.google.android.material.appbar.MaterialToolbar>


    <!-- AR Navigation Card Group with Horizontal Scrolling -->
    <HorizontalScrollView
        android:id="@+id/horizontalScrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:clipToPadding="false"
        android:clipChildren="false"
        android:padding="8dp"

        app:layout_constraintTop_toBottomOf="@id/topAppBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.9">

        <LinearLayout
            android:id="@+id/horizontalScrollViewLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center">

            <!-- First Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/ar_navigation_card"
                android:layout_width="600dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginEnd="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="250dp"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:adjustViewBounds="false"
                            android:scaleType="centerCrop"
                            android:src="@drawable/object_detection_demo" />

                        <Button
                            android:id="@+id/aria"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:theme="@style/Button.White"
                            android:padding="16dp"

                            android:text="Start AR navigation!"
                            android:textAllCaps="false"
                            android:textColor="@color/primaryTextColor"
                            android:textSize="16sp" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center_horizontal"
                        android:padding="10dp">

                        <!-- Centered Title -->
                        <TextView
                            android:id="@+id/demo_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Object Detection"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@color/primaryTextColor"/>

                        <TextView
                            android:id="@+id/demo_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:text="Realâ€‘time object detection optimized for mobile and edge."
                            android:textSize="15sp"
                            android:textColor="@color/primaryTextColor"/>



                        <!-- Section for Spinner Labels and Spinners -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:text="Model Configuration"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/primaryTextColor" />

                        <!-- Model Name Row -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="8dp"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.4"
                                android:text="Model:"
                                android:textSize="16sp"
                                android:textColor="@color/primaryTextColor"
                                android:textStyle="bold"
                                android:layout_marginEnd="16dp" />

                            <Spinner
                                android:id="@+id/spinner_model"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1" />
                        </LinearLayout>

                        <!-- Framework Row -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="8dp"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.4"
                                android:text="Framework:"
                                android:textSize="16sp"
                                android:textColor="@color/primaryTextColor"
                                android:textStyle="bold"
                                android:layout_marginEnd="16dp" />

                            <Spinner
                                android:id="@+id/spinner_framework"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1" />
                        </LinearLayout>


                        <!-- Backend Row -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="8dp"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.4"
                                android:text="Backend:"
                                android:textSize="16sp"
                                android:textColor="@color/primaryTextColor"
                                android:textStyle="bold"
                                android:layout_marginEnd="16dp" />

                            <Spinner
                                android:id="@+id/spinner_backend"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1" />
                        </LinearLayout>

                        <!-- Precision Row -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="8dp"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.4"
                                android:text="Precision:"
                                android:textSize="16sp"
                                android:textColor="@color/primaryTextColor"
                                android:textStyle="bold"
                                android:layout_marginEnd="16dp" />

                            <Spinner
                                android:id="@+id/spinner_precision"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1" />
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <!-- Second Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/ar_navigation_card"
                android:layout_width="600dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="250dp"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:src="@drawable/super_resolution_demo"
                            android:adjustViewBounds="false"
                            android:scaleType="centerCrop" />

                        <Button
                            android:id="@+id/aria_2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:padding="16dp"
                            android:text="Coming Soon..."
                            android:textAllCaps="false"
                            android:textColor="@color/primaryTextColor"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center_horizontal"
                        android:padding="10dp">

                        <!-- Centered Title -->
                        <TextView
                            android:id="@+id/demo_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Super Resolution"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@color/primaryTextColor"/>

                        <TextView
                            android:id="@+id/demo_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:text="Upscale images and remove image noise."
                            android:textSize="15sp"
                            android:textColor="@color/primaryTextColor"/>


                        <!-- Section for Spinner Labels and Spinners -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:text="Model Configuration"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/primaryTextColor" />

                        <!-- Model Name Row -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="8dp"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.4"
                                android:text="Model:"
                                android:textSize="16sp"
                                android:textColor="@color/primaryTextColor"
                                android:textStyle="bold"
                                android:layout_marginEnd="16dp" />

                            <Spinner
                                android:id="@+id/spinner_model"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1" />
                        </LinearLayout>

                        <!-- Framework Row -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="8dp"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.4"
                                android:text="Framework:"
                                android:textSize="16sp"
                                android:textColor="@color/primaryTextColor"
                                android:textStyle="bold"
                                android:layout_marginEnd="16dp" />

                            <Spinner
                                android:id="@+id/spinner_framework"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1" />
                        </LinearLayout>


                        <!-- Backend Row -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="8dp"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.4"
                                android:text="Backend:"
                                android:textSize="16sp"
                                android:textColor="@color/primaryTextColor"
                                android:textStyle="bold"
                                android:layout_marginEnd="16dp" />

                            <Spinner
                                android:id="@+id/spinner_backend"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1" />
                        </LinearLayout>

                        <!-- Precision Row -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="8dp"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.4"
                                android:text="Precision:"
                                android:textSize="16sp"
                                android:textColor="@color/primaryTextColor"
                                android:textStyle="bold"
                                android:layout_marginEnd="16dp" />

                            <Spinner
                                android:id="@+id/spinner_precision"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>


            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </HorizontalScrollView>


